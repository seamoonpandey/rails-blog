<h1>All articles listed here</h1>

<table>
<tr>
<th>Title</th>
<th>Description</th>
</tr>
<% @articles.each do |article| %>
<tr>
<td><%= article.title %></td>
<td><%= article.description %></td>
<td><%= button_to 'Edit', edit_article_path(article), method: :get %></td>
<td><%= button_to 'Show', article_path(article), method: :get %></td>
<td><%= button_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></td>
</tr>
<% end %>
</table>

<%# if we use button then we shall provide the method too and for link_to no need for method %>
<p><%= button_to "Create new article", new_article_path, method: :get %></p>